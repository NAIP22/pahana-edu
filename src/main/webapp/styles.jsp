body {
font-family: Arial, sans-serif;
background: #eef2f3;
margin: 0;
padding: 0;
}

.container {
max-width: 800px;
margin: 60px auto;
background: #fff;
padding: 30px 40px;
border-radius: 8px;
box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

h2 {
color: #333;
text-align: center;
}

label {
display: block;
margin-bottom: 8px;
color: #555;
font-weight: bold;
}

input[type="text"],
input[type="tel"] {
width: 100%;
padding: 10px;
margin-bottom: 20px;
border-radius: 4px;
border: 1px solid #ccc;
box-sizing: border-box;
}

.btn {
background-color: #28a745;
color: white;
padding: 10px 18px;
border: none;
border-radius: 4px;
cursor: pointer;
font-size: 15px;
}

.btn:hover {
background-color: #218838;
}

.back-link {
margin-top: 20px;
text-align: center;
}

.back-link a {
color: #555;
text-decoration: none;
}

.back-link a:hover {
text-decoration: underline;
}
